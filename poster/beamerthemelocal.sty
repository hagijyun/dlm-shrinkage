\ProvidesPackage{local}
\RequirePackage{graphicx}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<presentation>

\useinnertheme[]{rounded}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Background
\beamersetaveragebackground{white}

% body colors and fonts
\setbeamercolor*{normal text}{bg=white,fg=black}

% headline colors and fonts
\setbeamerfont{title}{size=\Huge,series=\bfseries,shape=\sfshape}
\setbeamerfont{title in headline}{size=\Huge,series=\bfseries,shape=\scshape}
\setbeamerfont{subtitle in headline}{size=\huge}
\setbeamerfont{author in headline}{size=\Huge,series=\bfseries}
\setbeamerfont{institute in headline}{size=\huge}

% footline colors and fonts
\setbeamerfont{footline}{fg=blue, size=\normalsize}

\setbeamertemplate{blocks}[rounded]
\setbeamertemplate{items}[circle]
\setbeamertemplate{enumerate items}[default]
\setbeamertemplate{itemize items}[]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

\setbeamercolor{itemize items}{fg=black}
\setbeamercolor{itemize item}{fg=black}
\setbeamercolor{enumerate items}{fg=black}
\setbeamercolor{enumerate item}{fg=black}

\setbeamercolor{block title}{fg=white, bg=black}
\setbeamerfont{block title}{size=\Large,family=\sffamily}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{ 
\begin{beamercolorbox}[sep=5ex]{headline}
    \begin{columns}[T]
      \begin{column}{.66\paperwidth}
        \begin{beamercolorbox}[leftskip=5ex]{title in headline}
          \usebeamerfont{title in headline}{\inserttitle{}}
        \end{beamercolorbox}%
        \begin{beamercolorbox}[leftskip=5ex,sep=1ex]{subtitle in headline}
          \usebeamerfont{subtitle in headline}{\insertsubtitle{}}
        \end{beamercolorbox}
      \end{column}
      \begin{column}{.33\paperwidth}
        \begin{beamercolorbox}[right,rightskip=5ex]{author in headline}
          \usebeamerfont{author in headline}{\insertauthor{}}
        \end{beamercolorbox}%
        \begin{beamercolorbox}[right,rightskip=5ex,sep=1ex]{institute in headline}
          \usebeamerfont{institute in headline}{\insertinstitute{}}
        \end{beamercolorbox}
      \end{column}
    \end{columns}
\end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[sep=2ex]{footline}%
    \begin{columns}[b]
      \begin{column}{.67\textwidth}
        \begin{beamercolorbox}[left,leftskip=1cm]{}
         Polmeth XXX $\bullet$ Charlottesville, Virginia $\bullet$ July 18, 2013
        \end{beamercolorbox}
      \end{column}
      \begin{column}{.33\textwidth}
        \begin{beamercolorbox}[right,rightskip=1cm]{}
          \Large \texttt{\url{http://jrnold.me/}}
          $\bullet$
          \Large \texttt{jeffrey.arnold@gmail.com}
        \end{beamercolorbox}
      \end{column}
    \end{columns}
  \end{beamercolorbox}
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%% Itemize
\setbeamertemplate{itemize items}[circle]{}
\setbeamertemplate{itemize items}[circle]{}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%% Frame
\setbeamertemplate{frametitle}{}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<all>


